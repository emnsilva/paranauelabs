CREATE TABLE IF NOT EXISTS outlaws (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT NOT NULL,
    reward REAL NOT NULL,
    crime TEXT NOT NULL,
    created_at DATETIME DEFAULT CURRENT_TIMESTAMP
);

